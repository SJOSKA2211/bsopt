# Development Dockerfile for the Auth Service
FROM node:20-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy package files
COPY src/auth-service/package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY src/auth-service/ .

# Expose Hono port (assuming 3001 based on child-03 comments)
EXPOSE 3001

# CMD for development
CMD ["npm", "run", "dev"]
