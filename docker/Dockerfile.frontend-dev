# Development Dockerfile for the Frontend Application
FROM node:20-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy package files
COPY src/frontend/package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY src/frontend/ .

# Expose Vite port
EXPOSE 5173

# CMD for development
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
